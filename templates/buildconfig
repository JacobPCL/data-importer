apiVersion: build.openshift.io/v1
kind: BuildConfig
metadata:
  name: data-importer
  namespace: bos-data-importer
spec:
  source:
    type: Git
    git:
      uri: https://github.com/JacobPCL/data-importer/  
    contextDir: app                    
    dockerfile: |-
      FROM registry.access.redhat.com/ubi8/ubi-minimal
      RUN microdnf -y install bash openssh-clients rsync grep
      WORKDIR /app
      COPY ./import_files.sh /app/import_files.sh
      RUN chmod a+rx /app/import_files.sh
  strategy:
    type: Docker
  output: 
    to:
      kind: ImageStreamTag
      name: data-importer:latest