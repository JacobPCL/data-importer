apiVersion: build.openshift.io/v1
kind: BuildConfig
metadata:
  name: data-importer
  namespace: bos-data-importer
spec:
  source:
    type: Git
    git:
      uri: https://github.com/monodot/container-up   # clone this code
    contextDir: app                    # cd to this directory
    dockerfile: |-
      FROM registry.access.redhat.com/ubi8/ubi-minimal
      RUN microdnf -y install bash openssh-clients rsync grep
      WORKDIR /app
      COPY . /app ./
      RUN chmod 711 ./import_files.sh
      CMD ["./import_files.sh"]
  strategy:
    type: Docker
  output: {}
    to:
      kind: ImageStreamTag
      name: mywebsite:latest
